<div class="container mt-5">

  <header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
            width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
          我的餐廳清單
        </a>
        <a href="/restaurants/new">Create</a>
      </div>
    </nav>

    <div class="banner"></div>
    <link rel="stylesheet" href="/stylesheets/indexstyle.css">
  </header>

  <!-- search bar -->
  <div class="container search-bar mb-3">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="container">
    <div class="row">
      {{#each restaurants}}
      <div class="col-3 card mb-3">
        <a href="/restaurants/{{this._id}}" class="text-secondary">

          <img class="card-img-top" src="{{this.image}}" alt="Sababa 沙巴巴中東美食">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal text-dark">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <button type="button" class="btn btn-outline-info btn-sm">
            detail
          </button>
        </a>
      </div>
      {{/each}}

    </div>
  </div>


</div>