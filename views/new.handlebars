<div class="container">
  <form action="/restaurants" method="POST">
    <div class="my-3">
      名字：
      <input type="text" placeholder="name" name="name" required>
    </div>
    <div class="mb-3">
      英文名字：
      <input type="text" placeholder="enname" name="name_en" required>
    </div>
    <div class="mb-3">
      類別：
      <input type="text" placeholder="category" name="category" required>
    </div>
    <div class="mb-3">
      圖片：
      <input type="text" placeholder="image" name="image" required>
    </div>
    <div class="mb-3">
      地點：
      <input type="text" placeholder="location" name="location" required>
    </div>
    <div class="mb-3">
      電話：
      <input type="text" placeholder="phone" name="phone" required>
    </div>
    <div class="mb-3">
      地圖：
      <input type="text" placeholder="google_map" name="google_map" required>
    </div>
    <div class="mb-3">
      評分：
      <input type="text" placeholder="rating" name="rating" required>
    </div>
    <div class="mb-3">
      描述：
      <input type="text" placeholder="description" name="description" required>
    </div>
    <button type="submit" class="btn btn-outline-info">Create</button>
  </form>
</div>